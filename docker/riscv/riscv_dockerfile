FROM ubuntu:latest
MAINTAINER Kyle Neil <kyle@johnneil.net>

WORKDIR /root

SHELL ["/bin/bash", "-c"]

RUN apt-get update && apt-get upgrade --yes

RUN apt-get install --yes gcc g++
RUN apt-get install --yes man vim gdb make git # system/debugging tools

RUN apt-get update --yes
RUN apt-get upgrade --yes
RUN apt-get dist-upgrade --yes

ADD riscv-toolchain-install.sh /root/riscv-toolchain-install.sh
RUN /root/riscv-toolchain-install.sh

ENV PATH="${PATH}:/root/install/bin"

EXPOSE 80

# build with: docker build -t base .
# run with:
# 	(Windows) docker run -it --rm -v C:\Users\kyle\Desktop\dev\:/root/ -v C:\Users\kyle\:/mnt --privileged --name base base bash
#	(macOS) docker run -it --rm -v /Users/kyleneil/code/main:/root/ -v /Users/kyleneil:/mnt --name base base bash
# to clean "<none>:<none>" files: docker system prune


