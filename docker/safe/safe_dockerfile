FROM ubuntu:latest
MAINTAINER Kyle Neil <kyle@johnneil.net>

SHELL ["/bin/bash", "-c"]

RUN apt-get -y update --yes

RUN apt-get install --yes gcc python3 
RUN apt-get install --yes valgrind vim gdb binutils 

RUN apt-get update --yes
RUN apt-get upgrade --yes
RUN apt-get dist-upgrade --yes

# build with: docker build -t base .
# run with:
# 	(Windows) docker run -it --rm --name base base bash
#	(macOS) docker run -it --rm --name base base bash
# to clean "<none>:<none>" files: docker system prune


