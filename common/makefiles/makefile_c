CC = gcc
STANDARD = -std=gnu11
CFLAGS = -Wall $(STANDARD) # use gnu11 as default...
DFLAGS = $(CFLAGS) $(STANDARD) -g # generate symbol information

SRC := $(filter-out test.c, $(wildcard *.c)) # grab anything with a .c ending

USER_FLAGS := $(vars)
UNAME := $(shell uname)

debug: pre
	@$(CC) $(SRC) $(DFLAGS) `pkg-config --cflags --libs glib-2.0` -o 'db.out'
	@echo "Debug build completed."

all: pre
	@$(CC) $(SRC) $(CFLAGS) -O3 -march=native -o 'prod.out' 
	@echo "Optimized build completed."

pre:
	@echo "Building on: $(UNAME), user params: $(USER_FLAGS)"

clean:
	@rm -f *.out
	@rm -f *.s *.o
	
	@rm -rf *.out.dSYM # get rid of debug info, macOS specific
	@rm -f *.gch
